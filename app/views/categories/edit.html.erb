<% provide :title, t(".edit") %>

<div class="col-md-6 col-md-offset-3">
  <h1><%= t ".edit" %></h1>
  <%= form_for @category do |f| %>
    <%= f.label :name, t(".name") %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.submit t(".submit"), class: "btn btn-primary" %>
  <% end %>
</div>
