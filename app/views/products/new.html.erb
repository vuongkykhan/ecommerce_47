<%= provide :title, t(".create") %>

<div class="col-md-6 col-md-offset-3">
  <h1><%= t ".create" %></h1>
  <%= form_for @product do |f| %>

    <% if @product.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">
          The form contains <%= pluralize(@product.errors.count, "error") %>.
        </div>
        <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.label :category_id, t(".category") %>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name, {:include_blank => true}, {:class => "form-control"} %>

    <%= f.label :name, t(".title") %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :description, t(".description") %>
    <%= f.text_field :description, class: "form-control" %>

    <%= f.label :unit_price, t(".unit_price") %>
    <%= f.text_field :unit_price, class: "form-control" %>

    <%= f.label :image, t(".image") %>
    <%= f.text_field :image, class: "form-control" %>

    <%= f.submit t(".create"), class: "btn btn-primary" %>
  <% end %>
</div>
